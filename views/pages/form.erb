<form class="" action="/<%= @topic.id %>" method="POST">
  <div class="">
    <label>Topic Title</label>
    <input type="text" name="title" placeholder="Enter a title" value="<%= @topic.title %>">
  </div>

  <div class="">
    <label>Description</label>
    <textarea name="body" placeholder="Enter the body of the post"><%= @topic.body %></textarea>
  </div>
  <div class="">
    <label>Author id</label>
    <input name="author" placeholder="author name" value="<%= @topic.author %>">
  </div>

  <div class="">
    <input type="submit" name="" value="Save Post">
  </div>

  <% if(@topic.id != "") %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>

</form>
